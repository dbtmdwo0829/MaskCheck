<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/custom_button_navy</item>
        <item name="android:textColor">@color/white</item>
        <!--<item name="android:fontWeight">900</item>-->
        <item name="android:textSize">24sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:layout_marginLeft">30dp</item>
    </style>

    <style name="CustomButton.gray" parent="CustomButton">
        <item name="android:background">@drawable/custom_button_gray</item>
        <item name="android:textColor">#0B214C</item>
    </style>

    <style name="CustomButton.white" parent="CustomButton">
        <item name="android:background">@drawable/custom_button_white</item>
        <item name="android:textColor">#0B214C</item>
    </style>


    <style name="CustomBox.white" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/custom_button_white</item>
        <item name="android:textColor">#0B214C</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>

    <style name="CustomBox.gray" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/custom_button_gray</item>
        <item name="android:textColor">#0B214C</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>

</resources>